<%- include('../partials/head', { SITE }) %>
<%- include('../partials/nav', { SITE, path }) %>

<section class="section">
  <h1>Invitations</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Score</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(r => { %>
        <tr>
          <td><%= r.name %></td>
          <td><%= r.email %></td>
          <td><%= r.status %></td>
          <td><%= r.score %></td>
          <td>
            <% if (r.status === 'pending') { %>
              <form method="POST" action="/admin/invite/<%= r.id %>/approve" style="display:inline;">
                <button>Approve</button>
              </form>
              <form method="POST" action="/admin/invite/<%= r.id %>/reject" style="display:inline;">
                <button>Reject</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
