<%- include('../partials/head', { SITE }) %>
<%- include('../partials/nav', { SITE, path }) %>

<section class="section">
  <div style="margin-bottom: 24px; padding: 14px; background: rgba(255,255,255,0.05); border-radius: 8px; display: flex; gap: 15px; align-items: center;">
    <strong>Admin:</strong>
    <a href="/admin/invites" class="btn btn--primary" style="padding: 6px 12px; font-size: 14px;">Invites</a>
    <a href="/admin/analytics" class="btn btn--ghost" style="padding: 6px 12px; font-size: 14px;">Analytics</a>
    <a href="/admin/papers" class="btn btn--ghost" style="padding: 6px 12px; font-size: 14px;">Manage PDFs</a>
    <a href="/admin/logout" style="margin-left: auto; color: #ff6b6b; font-size: 14px; text-decoration: none;">Logout</a>
  </div>

  <h1>Invitations</h1>

  <table class="admin-table" style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
      <tr style="border-bottom: 1px solid rgba(255,255,255,0.1); text-align: left;">
        <th style="padding: 10px;">Name</th>
        <th style="padding: 10px;">Email</th>
        <th style="padding: 10px;">Status</th>
        <th style="padding: 10px;">Score</th>
        <th style="padding: 10px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% rows.forEach(r => { %>
        <tr style="border-bottom: 1px solid rgba(255,255,255,0.05);">
          <td style="padding: 10px;"><%= r.name %></td>
          <td style="padding: 10px;"><%= r.email %></td>
          <td style="padding: 10px;">
            <span style="font-size: 12px; padding: 4px 8px; border-radius: 4px; background: <%= r.status === 'approved' ? '#10b981' : (r.status === 'rejected' ? '#ef4444' : '#f59e0b') %>; color: #000; font-weight: bold;">
              <%= r.status.toUpperCase() %>
            </span>
          </td>
          <td style="padding: 10px;"><%= r.score %></td>
          <td style="padding: 10px;">
            <% if (r.status === 'pending') { %>
              <form method="POST" action="/admin/invite/<%= r.id %>/approve" style="display:inline;">
                <button class="btn" style="padding: 4px 10px; font-size: 12px; background: #10b981; color: #000; border: none; cursor: pointer;">Approve</button>
              </form>
              <form method="POST" action="/admin/invite/<%= r.id %>/reject" style="display:inline; margin-left: 5px;">
                <button class="btn" style="padding: 4px 10px; font-size: 12px; background: #ef4444; color: white; border: none; cursor: pointer;">Reject</button>
              </form>
            <% } else { %>
              <span style="color: #666;">â€”</span>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

<%- include('../partials/footer') %>
